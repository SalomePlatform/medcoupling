# source path
top_srcdir=@top_srcdir@
root_srcdir=@ROOT_SRCDIR@
top_builddir=../..
srcdir=@srcdir@
VPATH=.:@srcdir@
doxygen=@DOXYGEN@

@COMMENCE@

doc:
	cp -fr $(srcdir)/INPUT ./; \
	cd INPUT; \
	sed 's|../../../share/salome|$(root_srcdir)|' doxyfile > doxyfile1; \
	mv -f doxyfile1 doxyfile; \
	$(doxygen) ./doxyfile; \
	cd ..; \
	cp -fr $(srcdir)/INPUT/sources/static/*.* ./html/
	cp -fr $(srcdir)/INPUT/sources/ html/
	cp -fr $(srcdir)/INPUT/HTML/  html/

clean:
	rm -rf html

distclean: clean
	rm -rf INPUT

install:
	$(INSTALL) -d $(docdir); \
	cp -rf html $(docdir)

uninstall:
	rm -rf $(docdir)/html
